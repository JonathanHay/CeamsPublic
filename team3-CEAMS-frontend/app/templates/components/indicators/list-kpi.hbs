<div class="content-container manage-users">
    <div class="ui row centered grid">
        <h1 class="header">Manage Users</h1>
    </div>

    <div class="ui centered grid">
        <div class="eight wide row">
            <div class="six wide column">
                <h3 class="ui centered aligned header">All Users</h3>
                <div class="ui centered grid section">
                    <div class="ui action input">
                        <input oninput={{action "filterAllUsers"}} type="text" placeholder="Search...">
                        <button class="ui button">Search</button>
                    </div>
                </div>
                <div class="section">
                    <div class="user-container">
                        <div class="ui middle aligned divided list">
                            {{#each this.allUsers as |user|}}
                            <div class="item">
                                <div class="left floated content username">
                                    {{user.firstName}} {{user.lastName}}
                                </div>
                                <button onclick={{action "add" user}} class="ui button right floated middle aligned">
                                    Add
                                </button>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="six wide column">
                <h3 class="ui centered aligned header">Team Members</h3>
                <div class="ui centered grid section">
                    <div class="ui action input">
                        <input oninput={{action "filtermembers"}} type="text" placeholder="Search...">
                        <button class="ui button">Search</button>
                    </div>
                </div>
                <div class="section">
                    <div class="user-container">
                        <div class="ui middle aligned divided list">
                            {{#each this.members as |user|}}
                            <div class="item">
                                <div class="left floated content username">
                                    {{user.firstName}} {{user.lastName}}
                                </div>
                                <button onclick={{action "remove" user}} class="ui button right floated middle aligned">
                                    Remove
                                </button>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
            <div class="six wide column">
                <button onclick={{action "submit"}} class="ui button right floated middle aligned">
                    {{ submitLabel }}
                </button>
            </div>
        </div>
    </div>
</div>

<div class="ui centered grid container">
    <div class="ui center aligned black button" {{action 'exportAll'}}>
        Export
    </div>
</div>
<div class="container">
    <table class="ui celled table">
        <thead>
            <tr>
                <th>Username</th>
                <th># of Logins</th>
                <th># of Audit Trail Entries</th>
                <th># of Tests Graded</th>
                <th># of Classes Taught</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            {{#each errorlessList as |one|}}
            <tr>
                <td data-label="Name">{{one.c1}}</td>
                <td data-label="Name">{{one.c2}}</td>
                <td data-label="Name">{{one.c3}}</td>
                <td data-label="Name">{{one.c4}}</td>
                <td data-label="Name">{{one.c5}}</td>
                <td data-label="Name">{{one.c6}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>