<div class="login">
  <div class="ui middle aligned center aligned grid">
    <div class="column">
      <h2 class="ui teal image header">
        <img class="image" src="{{rootURL}}assets\images\Western Logo.png" alt="">
        <div class="content">
          Log-in to your account
        </div>
      </h2>

      <form class="ui large form">
        <div class="ui stacked segment">
          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              {{input value=name  type="text" placeholder="Username"}}
            </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              {{input value=password  type="password" placeholder="Password"}}
            </div>
          </div>
          <button class="ui fluid large teal submit button" {{action "login"}}>
            Login
          </button>
        </div>
        <p class="error"> {{errorMessage}}</p>
      </form>
    </div>
  </div>
</div>


{{#ui-modal name="changePassword" class="changePassword" }}
  <div class="header">
    Please change your password and login again
  </div>
  <div class="content">
    <div class="ui form">
      <div class="inline field">
        <label>Password</label>
        {{input value=firstPassword type="password" placeholder="enter password"}}
      </div>
      <div class="inline field">
        <label>Reenter Password</label>
        {{input value=secondPassword type="password" placeholder="re-enter password"}}
      </div>
    </div>
  </div>



  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
    <div class="ui center aligned container">
      <p style="color: #ca1010"> {{errorMessage}}</p>
    </div>

  </div>
{{/ui-modal}}
