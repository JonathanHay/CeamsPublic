
<div class="ui button" {{action 'openModal'}}>
  Add Feature
</div>

{{#if FEAT28_010IsPermitted}}


{{#ui-modal name=modalName class=modalName }}
  <div class="header">
    Create New System Feature
  </div>
  <div class="content">
    <div class="ui form">
      <div class="inline field">
        <label>Feature code</label>
        {{input value=code type="text" placeholder="enter feature code" }}
      </div>
      <div class="inline field">
        <label>Feature name</label>
        {{input value=systemFeature type="text" placeholder="enter feature description" }}
      </div>
    </div>
  </div>
  <br>

  <div class="actions">

    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>

  </div>
{{/ui-modal}}

{{else}}

{{#ui-modal name=modalName class=modalName }}
  <div class="ui icon header">
    <i class="protect icon"></i>
    Permission Denied
  </div>
  <div class="content">
    <p>This feature (FEAT28_010: Add New System Feature) is not allowed for your account.</p>
    <p>Please contact the system administrator for more information.</p>
  </div>

  <div class="actions">
    <div class="ui black deny button">
      Understand
    </div>
  </div>
{{/ui-modal}}

{{/if}}