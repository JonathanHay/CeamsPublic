<button class="ui mini circular icon green button" {{action "openModal" }} title="Edit">
  <i class="write icon"></i>
</button>

{{#if FEAT07_002IsPermitted }}
{{#ui-modal name=modalName class=modalName }}

  <div class="header">
    Edit Course "{{title}}"
  </div>

  <div class="content">
    <div class="ui form">
      <div class="inline field">
        <label>Course Number</label>
        {{input type="text"   size="10" value = number placeholder="add number"}}
      </div>
      <div class="inline field">
        <label>Course Title</label>
        {{input type="text" value=title  size="60"   placeholder="add title"}}
      </div>
      <div class="inline field">
        <label>Academic Credit</label>
        {{input type="text" value=academicCredit  size="10"    placeholder="add academic credit"}}
      </div>

    </div>
  </div>

  <br>

  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <div class="ui positive right labeled icon button">
      Save
      <i class="checkmark icon"></i>
    </div>
  </div>
{{/ui-modal}}
{{else}}
  {{#ui-modal name= modalName class= modalName }}
    <div class="ui icon header">
      <i class="protect icon"></i>
      Permission Denied
    </div>
    <div class="content">
      <p>This feature (FEAT07_002: Edit course Information) is not allowed for your account.</p>
      <p>Please contact the system administrator for more information.</p>
    </div>

    <div class="actions">
      <div class="ui black deny button">
        Understand
      </div>
    </div>
  {{/ui-modal}}
{{/if}}